{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "startCommand": "node backend/simple-server.js",
        "healthcheckPath": "/",
        "healthcheckTimeout": 60,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "numReplicas": 1
    },
    "environments": {
        "production": {
            "variables": {
                "NODE_ENV": "production",
                "PORT": "3001"
            }
        }
    }
}