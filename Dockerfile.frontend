# Use Node.js 20 LTS as base image
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy frontend files
COPY index.html ./
COPY styles.css ./
COPY config.js ./
COPY js/ ./js/

# Expose frontend port
EXPOSE 8001

# Start the frontend server
CMD ["npm", "run", "start:frontend"]
